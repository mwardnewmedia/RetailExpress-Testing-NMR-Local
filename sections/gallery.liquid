<div class="bg-white">
    <div class="mx-auto max-w-xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold tracking-tight text-gray-900">{{ section.settings.gallery_title }}</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-10">
            {% for block in section.blocks %}
            <div>
                {% if block.settings.gallery_image %}
                    <img class="h-64 w-full object-cover object-center rounded-lg" src="{{ block.settings.gallery_image | image_url: width: 750 }}" alt="{{ block.settings.gallery_image.alt }}">
                {% else %}
                    <img class="h-auto max-w-full rounded-lg h-64 w-full object-cover object-center" src="https://picsum.photos/400" alt="{{ block.settings.gallery_image.alt }}">
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
</div>




{% schema %}
  {
    "name": "Gallery",
	"max_blocks": 12,
    "settings": [
    {
      "type": "text",
      "id": "gallery_title",
      "label": "Gallery Heading"
    }
  ],
     "blocks" : [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "header",
            "content": "Image"
          },
          {
            "type": "image_picker",
            "id": "gallery_image",
            "label": "Image",
			"info": "800 x 600px jpg recommended"
          },
 		  {
            "type": "text",
            "id": "gallery_image_label",
            "label": "Image Label"
          },
          {
            "type": "richtext",
            "id": "gallery_image_description",
            "label": "Image Description"
          }
	     ]
	}
  ],
	"presets": [
    {
      "name": "Gallery",
      "category": "Image",
	  "blocks": [
	  {
        "type": "image"
      },
      {
        "type": "image"
      },
      {
        "type": "image"
      },
      {
        "type": "image"
      }
	]
    }
  ]
  }
{% endschema %}
